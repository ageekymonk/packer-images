{
  "variables": {
    "aws_access_key": "{{env `aws_access_key`}}",
    "aws_secret_key": "{{env `aws_secret_key`}}",
    "aws_default_region": "{{env `aws_default_region`}}",
    "aws_profile": "{{env `aws_profile`}}",
    "aws_security_group": "",
    "aws_source_ami": "",
    "aws_subnet_id": "",
    "user_data_file": "",
    "ssh_username": "",
    "ssh_keypair_name": "",
    "ssh_private_key_file": "",
    "associate_public_ip_address": "false",
    "image_type": "",
    "os_version": "",
    "playbook": "",
    "certs_dir": "",
    "http_proxy": "",
    "https_proxy": "",
    "no_proxy": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_default_region`}}",
      "profile": "{{user `aws_profile`}}",
      "instance_type": "t2.micro",
      "source_ami": "{{user `aws_source_ami`}}",
      "ami_name": "centos-{{user `os_version`}}-{{user `image_type`}}-{{timestamp}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "security_group_id": "{{user `aws_security_group`}}",
      "user_data_file": "{{user `user_data_file`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_keypair_name": "{{user `ssh_keypair_name`}}",
      "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
      "associate_public_ip_address": "{{user `associate_public_ip_address`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "ansible-playbooks",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "{{ user `certs_dir`}}",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": ["sudo sh /tmp/install-certs.sh /tmp/certs"]
    },
    {
      "type": "shell",
      "inline": ["sudo sh /tmp/install-ansible.sh"]
    },
    {
      "type": "shell",
      "inline": ["cd /tmp/ansible-playbooks && sudo make run PLAYBOOK_NAME={{ user `playbook` }}.yml HTTP_PROXY={{ user `http_proxy` }} HTTPS_PROXY={{ user `https_proxy` }} NO_PROXY={{ user `no_proxy` }}"]
    }
  ]
}
